// set treachery variable if any PC non-mage, non-paladin crosses bridge
IF
  GlobalGT("CDPresioDuel","GLOBAL",0)
  GlobalLT("CDPresioDuel","GLOBAL",5)
  IsOverMe([PC.0.0.FIGHTER])
THEN
  RESPONSE #100
    SetGlobal("CDPresioDuel","GLOBAL",7)
END

